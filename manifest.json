{
    "manifest_version": 2,
    "name": "Recipe Manager",
    "version": "1.0",
    "description": "A digital vault of recipes",
    "icons":
    {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },
    "browser_action":{
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },

    "permissions":
    [
        "storage",
        "tabs",
        "<all_urls>"
    ]
}